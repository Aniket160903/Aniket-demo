import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

@Component({
  selector: 'app-doctor-medical-records',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './doctor-medical-records.component.html'
})
export class DoctorMedicalRecordsComponent {
  medicalRecords = [
    { id: 1, patient: 'Emily Johnson', reason: 'Fever', diagnosis: 'Viral Infection', date: '2025-10-12' },
    { id: 2, patient: 'John Doe', reason: 'Headache', diagnosis: 'Migraine', date: '2025-09-27' }
  ];

  newRecord = {
    patientId: '',
    reason: '',
    diagnosis: '',
    notes: '',
    prescriptions: [{ medicationName: '', dosage: '', instructions: '' }]
  };

  addPrescriptionField() {
    this.newRecord.prescriptions.push({ medicationName: '', dosage: '', instructions: '' });
  }

  removePrescriptionField(i: number) {
    this.newRecord.prescriptions.splice(i, 1);
  }

  onSubmit() {
    alert('✅ Record created successfully (mock only)');
    console.log(this.newRecord);
  }
}





<div class="p-6 font-sans">
  <h2 class="text-2xl font-semibold text-blue-700 mb-4">Write Prescription / Medical Record</h2>

  <div class="bg-white rounded-2xl shadow p-6 mb-6">
    <form (ngSubmit)="onSubmit()" #form="ngForm" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">Patient ID</label>
        <input type="text" [(ngModel)]="newRecord.patientId" name="patientId"
               class="w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-200" required>
      </div>

      <div>
        <label class="block font-medium mb-1">Reason for Visit</label>
        <input type="text" [(ngModel)]="newRecord.reason" name="reason"
               class="w-full border border-gray-300 rounded-lg p-2" required>
      </div>

      <div>
        <label class="block font-medium mb-1">Diagnosis</label>
        <input type="text" [(ngModel)]="newRecord.diagnosis" name="diagnosis"
               class="w-full border border-gray-300 rounded-lg p-2" required>
      </div>

      <div>
        <label class="block font-medium mb-1">Notes</label>
        <textarea [(ngModel)]="newRecord.notes" name="notes"
                  class="w-full border border-gray-300 rounded-lg p-2"></textarea>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-blue-700 mb-2">Prescriptions</h3>

        <div *ngFor="let p of newRecord.prescriptions; let i = index"
             class="grid grid-cols-3 gap-3 items-center mb-2">
          <input type="text" placeholder="Medication Name"
                 [(ngModel)]="p.medicationName" name="medicationName{{i}}"
                 class="border border-gray-300 rounded-lg p-2" required>
          <input type="text" placeholder="Dosage"
                 [(ngModel)]="p.dosage" name="dosage{{i}}"
                 class="border border-gray-300 rounded-lg p-2" required>
          <div class="flex gap-2 items-center">
            <input type="text" placeholder="Instructions"
                   [(ngModel)]="p.instructions" name="instructions{{i}}"
                   class="flex-1 border border-gray-300 rounded-lg p-2">
            <button type="button" (click)="removePrescriptionField(i)"
                    class="bg-red-500 text-white px-2 py-1 rounded-md">✕</button>
          </div>
        </div>

        <button type="button" (click)="addPrescriptionField()"
                class="mt-2 bg-blue-600 text-white px-3 py-1 rounded-lg">+ Add Prescription</button>
      </div>

      <div class="pt-4">
        <button type="submit"
                class="bg-green-600 text-white px-5 py-2 rounded-lg hover:bg-green-700">Create Record</button>
      </div>
    </form>
  </div>

  <h2 class="text-2xl font-semibold text-blue-700 mb-4">Existing Medical Records</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div *ngFor="let record of medicalRecords"
         class="bg-white rounded-2xl shadow p-4">
      <h4 class="text-lg font-semibold text-blue-700">{{ record.patient }}</h4>
      <p><strong>Reason:</strong> {{ record.reason }}</p>
      <p><strong>Diagnosis:</strong> {{ record.diagnosis }}</p>
      <p><strong>Date:</strong> {{ record.date }}</p>
    </div>
  </div>
</div>







import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-patient-medical-records',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './patient-medical-records.component.html'
})
export class PatientMedicalRecordsComponent {
  medicalRecords = [
    { id: 1, doctor: 'Dr. John Smith', reason: 'Cough', diagnosis: 'Cold', date: '2025-10-05', notes: 'Take rest' },
    { id: 2, doctor: 'Dr. Priya Patel', reason: 'Back Pain', diagnosis: 'Muscle Strain', date: '2025-09-20', notes: 'Avoid lifting' }
  ];
}





<div class="p-6 font-sans">
  <h2 class="text-2xl font-semibold text-blue-700 mb-4">My Medical Records</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div *ngFor="let record of medicalRecords"
         class="bg-white rounded-2xl shadow p-5">
      <h4 class="text-lg font-semibold text-blue-700 mb-1">{{ record.reason }}</h4>
      <p><strong>Doctor:</strong> {{ record.doctor }}</p>
      <p><strong>Diagnosis:</strong> {{ record.diagnosis }}</p>
      <p><strong>Date:</strong> {{ record.date }}</p>
      <p><strong>Notes:</strong> {{ record.notes }}</p>
    </div>
  </div>
</div>







import { Routes } from '@angular/router';
import { DoctorMedicalRecordsComponent } from './pages/doctor-medical-records/doctor-medical-records.component';
import { PatientMedicalRecordsComponent } from './pages/patient-medical-records/patient-medical-records.component';

export const routes: Routes = [
  { path: 'doctor/medical-records', component: DoctorMedicalRecordsComponent },
  { path: 'patient/medical-records', component: PatientMedicalRecordsComponent },
];




